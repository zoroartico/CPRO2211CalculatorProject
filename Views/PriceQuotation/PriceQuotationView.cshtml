@model PriceQuotationModel

@{
    ViewBag.Title = "Price Quotation Calculator";
}

<form asp-action="PriceQuotationView" method="post">
    <div class="row">
        <label>Subtotal:</label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" name="Price"/>
        <span asp-validation-for="Price"></span>
    </div>

    <div class="row">
        <label>Discount Percent:</label>
        <input class="form-control" asp-for="DiscountPercent" type="number" step="0.01" name="DiscountPercent"/>
        <span asp-validation-for="DiscountPercent"></span>
    </div>

    <div class="row">
        <label>Discount Amount:</label>
        <label>@ViewBag.Discount.ToString("c2")</label>
    </div>

    <div class="row">
        <label>Total: </label>
        <label>@ViewBag.Total.ToString("c2")</label>
    </div>

    <div class="row">
        <button type="submit">Calculate</button>
        <button type="reset">Clear</button>
    </div>
</form>

    