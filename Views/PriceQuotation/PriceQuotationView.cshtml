@model PriceQuotationModel

@{
    ViewBag.Title = "Price Quotation Calculator";
}

<form asp-action="PriceQuotationView" method="post">
    <div class="row">
        <label asp-for="Price">Subtotal:</label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" name="subtotal"/>
        <span asp-validation-for="Price"></span>
    </div>

    <div class="row">
        <label asp-for="DiscountPercent">Discount Percent:</label>
        <input class="form-control" asp-for="DiscountPercent" type="number" step="0.01" />
        <span asp-validation-for="DiscountPercent"></span>
    </div>

    <div class="row">
        <label>Discount Amount:</label>
        <label>@ViewBag.Discount.ToString("c2")</label>
    </div>

    <div class="row">
        <label>Total: </label>
        <label>@ViewBag.Total.ToString("c2")</label>
    </div>

    <div class="row">
        <button type="submit">Calculate</button>
        <a asp-action="PriceQuotationView">Clear</a>
    </div>
</form>

    